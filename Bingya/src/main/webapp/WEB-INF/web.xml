	<!-- </filter-mapping> -->
	<servlet>
		<servlet-name>flex-messagebroker</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>classpath:flex-servlet.xml</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>FileUploaded</servlet-name>
		<servlet-class>com.fileoperation.FileUploaded</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>flex-messagebroker</servlet-name>
		<url-pattern>/messagebroker/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>FileUploaded</servlet-name>
		<url-pattern>/FileUploaded</url-pattern>
	</servlet-mapping>

