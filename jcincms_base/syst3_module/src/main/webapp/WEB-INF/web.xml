	<session-config>
		<session-timeout>5</session-timeout>
	</session-config>
	<welcome-file-list>
		<!-- <welcome-file>index.html</welcome-file> -->
		<welcome-file>/</welcome-file>
		<!--<welcome-file>default/index.jsp</welcome-file> -->
	</welcome-file-list>
</web-app>