<?xml version="1.0" encoding="utf-8"?>
<renderers:BaseRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
						xmlns:s="library://ns.adobe.com/flex/spark"
						xmlns:mx="library://ns.adobe.com/flex/mx"
						xmlns:renderers="org.un.cava.birdeye.ravis.components.renderers.*"
						 useHandCursor="false">
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	<s:Group id="base" width="100" height="50">
		<s:Rect top="0" left="0" bottom="0" right="0" radiusX="2" radiusY="2">
			<s:fill>
				<s:RadialGradient>
					<s:GradientEntry color="0xffffff"/>
					<s:GradientEntry color="0xffeedd"/>
				</s:RadialGradient>
			</s:fill>
			<s:stroke>
				<s:SolidColorStroke color="0x0"  weight="2"/>
			</s:stroke>
		</s:Rect>
		<s:Label horizontalCenter="0" verticalCenter="0" text="{label}"/>
	</s:Group>
</renderers:BaseRenderer>
