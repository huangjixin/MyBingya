<?xml version="1.0" encoding="utf-8"?>
<s:SparkButtonSkin xmlns:fx="http://ns.adobe.com/mxml/2009"
				   xmlns:s="library://ns.adobe.com/flex/spark"
				   xmlns:fb="http://ns.adobe.com/flashbuilder/2009">
	<fx:Metadata>[HostComponent("com.hjx.diagram.editor.ConnectingAreaHandle")]</fx:Metadata>
	
	<!-- states -->
	<s:states>
		<s:State name="up"/>
		<s:State name="over"/>
		<s:State name="down"/>
		<s:State name="disabled"/>
	</s:states>
	<s:Group id="base" left="0" right="0" top="0" bottom="0" minWidth="10" minHeight="10">
		<s:Rect  left="0" right="0" top="0" bottom="0">
			<s:stroke>
				<s:SolidColorStroke color="red"/>
			</s:stroke>
			<s:fill>
				<s:SolidColor color="white"/>
			</s:fill>
		</s:Rect>
	</s:Group>
</s:SparkButtonSkin>
